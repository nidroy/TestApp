{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=UsersWebAppDB;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "None", // Полностью отключаем все логи Microsoft
      "Microsoft.AspNetCore": "None",
      "Microsoft.EntityFrameworkCore": "None"
    }
  },
  "File": {
    "Path": "Logs/app.log",
    "FileSizeLimitBytes": 10485760, // 10MB
    "RetainedFileCountLimit": 5
  },
  "AllowedHosts": "*"
}
